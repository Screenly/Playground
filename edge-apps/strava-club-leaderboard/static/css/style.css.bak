/* Strava Club Leaderboard Styles */

/* Additional CSS variables */
:root {
  --border-radius: 0.5rem;
  --border-radius-lg: 0.75rem;
  --border-radius-full: 9999px;
}

/* App Layout */
.app {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}

/* Header */
.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-8) var(--current-padding);
  background-color: var(--theme-color-card);
  border-bottom: 2px solid var(--theme-color-border);
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
  box-shadow: 0 2px 8px #0000001A;
}

.app-header-left {
  display: flex;
  align-items: center;
}

.app-header-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

/* Logo */
.logo {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

.logo-image {
  height: 4rem;
  width: 4rem;
  max-width: 4rem;
  object-fit: contain;
  border-radius: var(--border-radius);
  background-color: var(--theme-color-background);
}

.logo-text {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: var(--theme-color-text);
  margin: 0;
  line-height: 1.1;
}

/* Last Updated */
.last-updated {
  display: flex;
  align-items: center;
  padding: var(--spacing-3) var(--spacing-4);
  background-color: var(--theme-color-background);
  border-radius: var(--border-radius);
  font-size: var(--font-size-lg);
  color: var(--theme-color-text-secondary);
  border: 1px solid var(--theme-color-border);
}

.last-updated-text {
  font-weight: 500;
}

/* Main Content */
.app-main {
  flex: 1;
  padding: var(--current-padding);
  overflow-y: auto;
}

/* Loading State - Removed duplicate, keeping the better one with 100vh */

/* Error State */
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: var(--spacing-4);
  text-align: center;
}

.error-icon {
  font-size: var(--font-size-6xl);
}

.error-title {
  font-size: var(--font-size-3xl);
  font-weight: 600;
  color: var(--theme-color-error);
  margin: 0;
}

.error-message {
  font-size: var(--font-size-lg);
  color: var(--theme-color-text-secondary);
  margin: 0;
  max-width: 30rem;
}

/* Leaderboard */
.leaderboard {
  padding: var(--spacing-8) var(--current-padding);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-8);
  max-width: 100%;
}

.leaderboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-4);
}

.leaderboard-title {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: var(--theme-color-text);
  margin: 0;
  line-height: 1.2;
}

.leaderboard-stats {
  display: flex;
  gap: var(--spacing-8);
  align-items: center;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: var(--spacing-1);
}

.stats-label {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--theme-color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stats-value {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  color: var(--theme-color-primary);
  line-height: 1;
}

/* Leaderboard List */
.leaderboard-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-6);
  width: 100%;
}

/* Responsive leaderboard list spacing for better fit */
@media (max-width: 800px) {
  .leaderboard-list {
    gap: var(--spacing-3);
  }
}

@media (min-width: 801px) and (max-width: 1920px) {
  .leaderboard-list {
    gap: var(--spacing-4);
  }
}

@media (min-width: 1921px) and (max-width: 3840px) {
  .leaderboard-list {
    gap: var(--spacing-5);
  }
}

@media (min-width: 3841px) {
  .leaderboard-list {
    gap: var(--spacing-6);
  }
}

.leaderboard-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-8) var(--spacing-10);
  background-color: var(--theme-color-card);
  border-radius: var(--current-border-radius-big);
  box-shadow: 0 4px 12px #0000001A;
  border: 2px solid var(--theme-color-border);
  transition: all 0.3s ease;
  min-height: 120px;
}

.leaderboard-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px #00000026;
}

.leaderboard-rank {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  font-size: var(--font-size-4xl);
  font-weight: 800;
  color: white;
  margin-right: var(--spacing-8);
  text-shadow: 0 2px 4px #00000033;
  flex-shrink: 0;
}

.leaderboard-athlete {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2);
  flex: 1;
  min-width: 0;
}

.leaderboard-name {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  color: var(--theme-color-text);
  margin: 0;
  line-height: 1.2;
}

.leaderboard-activity-count {
  font-size: var(--font-size-xl);
  font-weight: 500;
  color: var(--theme-color-text-secondary);
  margin: 0;
}

.leaderboard-stats {
  display: flex;
  gap: var(--spacing-8);
  align-items: center;
  flex-shrink: 0;
}

.leaderboard-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: var(--spacing-1);
  min-width: 120px;
}

.leaderboard-stat-label {
  font-size: var(--font-size-sm);
  font-weight: 600;
  color: var(--theme-color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 1px;
  opacity: 0.9;
}

.leaderboard-stat-value {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  color: var(--theme-color-text);
  line-height: 1;
}

/* Activity Type Icons */
.activity-type-icon {
  width: 1.5rem;
  height: 1.5rem;
  margin-right: var(--spacing-2);
}

/* Footer */
.app-footer {
  padding: var(--spacing-6) var(--current-padding);
  background-color: var(--theme-color-card);
  border-top: 1px solid var(--theme-color-border);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
  align-items: center;
  margin-top: auto;
}



.footer-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-3);
  transition: opacity 0.2s ease;
}

.footer-content:hover {
  opacity: 1;
}



.footer-text {
  font-size: var(--font-size-sm);
  color: var(--theme-color-text-secondary);
  opacity: 0.8;
  transition: opacity 0.2s ease;
}



.footer-attribution {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-8);
  flex-wrap: wrap;
}

.footer-attribution-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-2);
}

.footer-attribution-label {
  font-size: var(--font-size-xs);
  color: var(--theme-color-text-secondary);
  opacity: 0.7;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 600;
  transition: opacity 0.2s ease;
}

.footer-logo {
  width: auto;
  opacity: 0.8;
  transition: opacity 0.2s ease;
}

.footer-logo--strava {
  height: 2rem;
}

.footer-logo--screenly {
  height: 1.5rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  .app-header {
    flex-direction: column;
    gap: var(--spacing-4);
    padding: var(--spacing-4) var(--spacing-6);
  }

  .app-header-right {
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .leaderboard-header {
    flex-direction: column;
    gap: var(--spacing-4);
    text-align: center;
  }

  .leaderboard-stats {
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }

  .athlete-card {
    flex-direction: column;
    text-align: center;
    gap: var(--spacing-4);
  }

  .athlete-card-content {
    flex-direction: column;
    margin-left: 0;
    gap: var(--spacing-4);
  }

  .athlete-card-stats {
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }

  .logo-text {
    font-size: var(--font-size-lg);
  }
}

@media (max-width: 480px) {
  .app-main {
    padding: var(--spacing-4);
  }

  .leaderboard-header {
    padding: var(--spacing-4);
  }

  .athlete-card {
    padding: var(--spacing-4);
  }

  .athlete-card-rank {
    font-size: var(--font-size-3xl);
    min-width: 3rem;
  }

  .athlete-card-name {
    font-size: var(--font-size-lg);
  }

  .leaderboard-title {
    font-size: var(--font-size-2xl);
  }
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.athlete-card {
  animation: fadeIn 0.5s ease-out;
}

.athlete-card:nth-child(1) {
  animation-delay: 0.1s;
}

.athlete-card:nth-child(2) {
  animation-delay: 0.2s;
}

.athlete-card:nth-child(3) {
  animation-delay: 0.3s;
}

.athlete-card:nth-child(4) {
  animation-delay: 0.4s;
}

.athlete-card:nth-child(5) {
  animation-delay: 0.5s;
}

/* Pulse animation for loading states */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.loading-placeholder {
  animation: pulse 2s infinite;
}

/* Gradient background for top performers */
.athlete-card--rank-1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.athlete-card--rank-2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #808080 100%);
}

.athlete-card--rank-3 {
  background: linear-gradient(135deg, #CD7F32 0%, #8B4513 100%);
}

/* Rank Colors - High Contrast for Digital Signage */
.leaderboard-rank--1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  box-shadow: 0 4px 16px #FFD70066;
}

.leaderboard-rank--2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
  box-shadow: 0 4px 16px #C0C0C066;
}

.leaderboard-rank--3 {
  background: linear-gradient(135deg, #CD7F32 0%, #8B4513 100%);
  box-shadow: 0 4px 16px #CD7F3266;
}

.leaderboard-rank--default {
  background: linear-gradient(135deg, #4A5568 0%, #2D3748 100%);
  box-shadow: 0 4px 16px #4A556866;
}

/* Enhanced contrast for text on colored backgrounds */
.leaderboard-item--top-3 {
  border: 3px solid var(--theme-color-primary);
  box-shadow: 0 6px 20px #00000026;
}

.leaderboard-item--top-3:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 32px #00000033;
}

/* Ensure high contrast for all text */
.leaderboard-name {
  text-shadow: 0 1px 2px #0000001A;
}

.leaderboard-stat-value {
  text-shadow: 0 1px 2px #0000001A;
}

/* Loading and Error States - Larger for visibility */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-8);
  background-color: var(--theme-color-background);
  z-index: 1000;
}

.loading-text {
  font-size: var(--font-size-3xl);
  font-weight: 600;
  color: var(--theme-color-text-secondary);
  text-align: center;
}

.loading-spinner {
  width: 80px;
  height: 80px;
  border: 8px solid var(--theme-color-border);
  border-top: 8px solid var(--theme-color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: var(--spacing-6);
  text-align: center;
  padding: var(--spacing-8);
}

.error-icon {
  font-size: var(--font-size-6xl);
  color: var(--theme-color-error);
}

.error-title {
  font-size: var(--font-size-4xl);
  font-weight: 700;
  color: var(--theme-color-text);
  margin: 0;
}

.error-message {
  font-size: var(--font-size-xl);
  color: var(--theme-color-text-secondary);
  margin: 0;
  max-width: 600px;
  line-height: 1.5;
}

/* Responsive Footer */
@media (max-width: 480px) {
  .app-footer {
    padding: var(--spacing-4) var(--current-padding);
