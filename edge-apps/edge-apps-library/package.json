{
  "name": "@screenly/edge-apps",
  "version": "1.0.0",
  "description": "A TypeScript library for interfacing with Screenly Edge Apps API",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "edge-apps-scripts": "./bin/edge-apps-scripts.ts"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./platform": {
      "import": "./src/platform/index.ts",
      "types": "./src/platform/index.ts"
    },
    "./core": {
      "import": "./src/core/index.ts",
      "types": "./src/core/index.ts"
    },
    "./styles": "./src/styles/index.css",
    "./styles/*": "./src/styles/*",
    "./types": {
      "import": "./src/types/index.ts",
      "types": "./src/types/index.ts"
    },
    "./test": {
      "import": "./src/test/index.ts",
      "types": "./src/test/index.ts"
    }
  },
  "files": [
    "src",
    "bin",
    "scripts",
    "eslint.config.ts"
  ],
  "scripts": {
    "prebuild": "bun run type-check",
    "build": "bun build:types",
    "build:types": "tsc",
    "test": "bun test --parallel",
    "test:unit": "bun test --parallel",
    "test:coverage": "bun test --coverage --parallel",
    "lint": "eslint . --fix",
    "format": "prettier --write src/ scripts/ README.md index.html",
    "format:check": "prettier --check src/ scripts/ README.md index.html",
    "type-check": "tsc --noEmit"
  },
  "prettier": "./.prettierrc.json",
  "keywords": [
    "screenly",
    "edge-apps",
    "digital-signage"
  ],
  "author": "Screenly",
  "license": "MIT",
  "dependencies": {
    "@photostructure/tz-lookup": "^11.4.0",
    "@tailwindcss/vite": "^4.1.18",
    "country-locale-map": "^1.9.11",
    "offline-geocode-city": "^1.0.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "bun-types": "^1.3.6",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  }
}
