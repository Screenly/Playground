{
  "name": "@screenly/edge-apps",
  "version": "1.0.0",
  "description": "A TypeScript library for interfacing with Screenly Edge Apps API",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "edge-apps-scripts": "./bin/edge-apps-scripts.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./test": {
      "import": "./dist/test/index.js",
      "types": "./dist/test/index.d.ts"
    },
    "./vue": {
      "import": "./dist-vue/vue/index.js",
      "types": "./dist-vue/vue/index.d.ts"
    },
    "./vue/components": {
      "import": "./dist-vue/vue/components/index.js",
      "types": "./dist-vue/vue/components/index.d.ts"
    },
    "./vue/stores": {
      "import": "./dist-vue/vue/stores/index.js",
      "types": "./dist-vue/vue/stores/index.d.ts"
    },
    "./vue/styles/*": {
      "import": "./src/vue/styles/*"
    }
  },
  "files": [
    "dist",
    "dist-vue",
    "bin",
    "scripts",
    "eslint.config.ts",
    "src/vue/styles"
  ],
  "scripts": {
    "prebuild": "bun run type-check",
    "build": "bun run build:types && bun run build:vue",
    "build:types": "tsc",
    "build:vue": "vite build --config vite.lib.config.ts",
    "test": "bun test --parallel",
    "test:unit": "bun test --parallel",
    "test:coverage": "bun test --coverage --parallel",
    "lint": "eslint . --fix",
    "format": "prettier --write src/ scripts/ README.md index.html",
    "format:check": "prettier --check src/ scripts/ README.md index.html",
    "type-check": "tsc --noEmit",
    "type-check:vue": "vue-tsc --noEmit -p tsconfig.vue.json"
  },
  "prettier": "./.prettierrc.json",
  "keywords": [
    "screenly",
    "edge-apps",
    "digital-signage",
    "vue"
  ],
  "author": "Screenly",
  "license": "MIT",
  "dependencies": {
    "@photostructure/tz-lookup": "^11.4.0",
    "@tailwindcss/vite": "^4.1.18",
    "country-locale-map": "^1.9.12",
    "offline-geocode-city": "^1.0.2",
    "panic-overlay": "^1.0.51",
    "tailwindcss": "^4.1.18"
  },
  "peerDependencies": {
    "@sentry/vue": "^10.0.0",
    "dayjs": "^1.11.0",
    "pinia": "^3.0.0",
    "vue": "^3.5.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "pinia": {
      "optional": true
    },
    "@sentry/vue": {
      "optional": true
    },
    "dayjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sentry/vue": "^10.37.0",
    "@types/bun": "^1.3.7",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.1.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "bun-types": "^1.3.7",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "pinia": "^3.0.4",
    "prettier": "^3.8.1",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue": "^3.5.27",
    "vue-tsc": "^3.2.4"
  }
}
