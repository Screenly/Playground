{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Types */
    "types": ["bun-types"],
    
    /* Path mapping for library source */
    "baseUrl": ".",
    "paths": {
      "@screenly/edge-apps": ["../edge-apps-library/src/index.ts"],
      "@screenly/edge-apps/*": ["../edge-apps-library/src/*"]
    }
  },
  "include": ["src"]
}

