{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["../blueprint/ts/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "blueprint/stores/*": ["../blueprint/ts/stores/*"],
      "blueprint/scss/*": ["../blueprint/scss/*"],
      "blueprint/components": ["../blueprint/ts/components"],
      "blueprint/assets/*": ["../blueprint/assets/*"],
      "@edge-apps/blueprint/*": ["../blueprint/*"]
    }
  }
}
