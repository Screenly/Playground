{
  "name": "grafana",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate-mock-data": "screenly edge-app run --generate-mock-data",
    "build:dev": "bun build src/main.ts --outdir static/js --target browser --watch --sourcemap",
    "predev": "bun run generate-mock-data",
    "dev": "run-p build:dev dev:edge cors-proxy-server",
    "dev:edge": "screenly edge-app run",
    "build": "bun run build:prod",
    "build:prod": "bun build src/main.ts --outdir static/js --target browser",
    "test": "bun test",
    "test:unit": "bun run test",
    "lint": "tsc --noEmit",
    "format": "prettier --config ../edge-apps-library/.prettierrc.json --write src/ README.md index.html static/css",
    "deploy": "bun run build && screenly edge-app deploy",
    "prepare": "cd ../edge-apps-library && bun install && bun run build",
    "cors-proxy-server": "bun ../edge-apps-library/scripts/cors-proxy-server.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@screenly/edge-apps": "workspace:../edge-apps-library",
    "@types/bun": "^1.3.4",
    "@types/jsdom": "^27.0.0",
    "bun-types": "^1.3.4",
    "jsdom": "^27.3.0",
    "npm-run-all2": "^8.0.4",
    "panic-overlay": "^1.0.51",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
