{
  "name": "qr-code",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run build && screenly edge-app run",
    "build": "bun build static/js/main.ts --outdir static/js --target browser",
    "test": "bun test",
    "test:unit": "bun test",
    "lint": "tsc --noEmit",
    "format": "prettier --write static/js/*.ts README.md",
    "format:check": "prettier --check static/js/*.ts README.md",
    "deploy": "bun run build && screenly edge-app deploy"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@screenly/edge-apps": "workspace:../edge-apps-library",
    "@types/bun": "^1.3.2",
    "@types/jsdom": "^27.0.0",
    "@types/qrcode": "^1.5.6",
    "bun-types": "^1.3.2",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
