{
  "name": "menu-board",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "predev": "screenly edge-app run --generate-mock-data",
    "dev": "bun run build && screenly edge-app run",
    "build": "bun build src/main.ts --outdir static/js --target browser",
    "test": "bun test",
    "test:unit": "bun test",
    "lint": "tsc --noEmit",
    "format": "prettier --write src/ README.md index.html static/css/",
    "deploy": "bun run build && screenly edge-app deploy",
    "prepare": "cd ../edge-apps-library && bun install && bun run build"
  },
  "devDependencies": {
    "@screenly/edge-apps": "workspace:../edge-apps-library",
    "@types/bun": "^1.3.2",
    "@types/jsdom": "^27.0.0",
    "bun-types": "^1.3.2",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
