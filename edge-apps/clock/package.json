{
  "name": "clock",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate-mock-data": "screenly edge-app run --generate-mock-data",
    "predev": "bun run generate-mock-data",
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build",
    "test:unit": "bun test --pass-with-no-tests",
    "lint": "eslint . --fix",
    "format": "prettier --write src/ README.md index.html",
    "format:check": "prettier --check src/ README.md index.html",
    "predeploy": "bun run build",
    "deploy": "screenly edge-app deploy --path=dist/",
    "prepare": "cd ../edge-apps-library && bun install && bun run build"
  },
  "dependencies": {
    "@screenly/edge-apps": "workspace:../edge-apps-library"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "postcss": "^8.4.49",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.0.0",
    "yaml": "^2.6.1"
  }
}
